{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@controller": [
        "controller/index"
      ],
      "@controller/*": [
        "controller/*"
      ],
      "@service/*": [
        "service/*"
      ],
      "@util/*": [
        "util/*"
      ],
      "@entity/*": [
        "entity/*"
      ],
      "@middleware/*": [
        "middleware/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}
